

<h1>Listing articles</h1>



<table>
    <tr>
        <th>Title</th>
        <th>Subtile</th>
        <th>Body</th>
        <th></th>
        <td></td>
        <td></td>
    </tr>
    <% @articles.each do |article| %>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.subtitle %></td>
            <td><%= article.body %></td>
            <td><%= link_to 'Show', article_path(article.slug) %></td>
            <td><%= link_to 'edit', edit_article_path(article.slug) %></td>
            <td><%= link_to 'delete', article_path(article.slug), method: :delete,
                data: {confirm: 'Are you sure?'}
                %> </td>
        </tr>
    <% end %>
</table>