<p>
    <strong>Title: </strong>
    <%= @article.title %>
</p>
<p>
    <strong>Body: </strong>
    <%= @article.body %>
</p>
<p>
    <strong>Tags:</strong>
    <%= raw @article.all_tags.map { |t| link_to t, tag_path(t)}.join(', ') %> 
</p>


<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'back', articles_path %> 



<div>
    <% if current_user %>
      
      <h2>Comments</h2>
      
      <%= form_with(model: [@article, @article.comments.build]) do |f| %>
        <%= f.text_area :content, placeholder: "write comments here" %>
        <br>
        <%= f.submit "enter", class: "btn btn-primary" %>
      <% end %>

    <% else %>
    <div data-onsuccess="onSignIn">
        <%= link_to "Bình loạn", "/auth/google_oauth2", id: "onSignIn" %>
    </div>
    <% end %>
    

</div>


<hr>
<% @comments.each do |comment| %>
  <h5>
      <strong><%= comment.user.name %></strong> wrote <small>  <%= time_ago_in_words(comment.created_at)  %></small>
  </h5>
  <h3>
      <%= comment.content %>
  </h3>
<% end %>