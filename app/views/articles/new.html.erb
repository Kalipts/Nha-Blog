<h1>New Article</h1>

<%= form_with scope: :article, url: articles_path,  local: true do |form| %>
<p>
    <%= form.label :title %> <br>
    <%= form.text_field :title %>
</p>

<p>
    <%= form.label :slug %> <br>
    <%= form.text_field :slug %>
</p>

<p>
    <%= form.label :subtitle %> <br>
    <%= form.text_area :subtitle%>
</p>
<p>
    <%= form.label :body %> <br>
    <%= form.text_area :body %>
</p>
<p>
    <%= form.submit %>
</p>
<% end %>

<%= link_to 'back', articles_path %>